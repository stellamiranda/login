<div id="left">
	<div class="wrap">
		<h2>
			Ahoy hoy!
		</h2>
		<% flash.each do |name, msg| %>
  			<%= content_tag :div, msg, :id => "flash_#{name}" %>	
		<% end %>
		<div id="login">
			<%= form_tag sessions_path do %>
			    <%= text_field_tag :username, params[:username], class: 'textfield user', placeholder: "Username" %> 
			    <%= password_field_tag :password , nil, class: 'textfield password' , placeholder: "Password" %> 
			  <!--p class="button"><%#= submit_tag "Log in" %></p-->
			<% end %>
		</div>
	</div>
</div>

<div class="wrap">
	<div id="right">
		<%= image_tag "background_img4.png" %>
	</div>
</div>

<script type="text/javascript">
	$("input").keypress(function(event) {
    	if (event.which == 13) {
        	event.preventDefault();
        	$("form").submit();
    	}
	});
</script>